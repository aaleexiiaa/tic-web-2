---
// src/pages/index.astro
import BaseLayout from '../layouts/BaseLayout.astro'
const allPosts = Astro.fetchContent('./blog/*.md');

// Sort posts based on date
allPosts.sort((a,b) => {
  return new Date(b.date).getTime() - new Date(a.date).getTime();
})
---
<BaseLayout title="Homepage">
  <h1>Blog</h1>
  <h2>Últimas entradas de mi blog</h2>
       {allPosts.map((post) => (
    <div class="blog-post">  
      <div class="title">{post.title}</div>      
      <div class="content">
        <p>{post.short}</p>
      </div>
      <a class="readmore" href={post.url}>Leer más</a>
    </div>  
  ))}
</BaseLayout>

<style>
.blog-post {
  padding-bottom: 1em;
  margin-top: 2em;
  margin-left: 5em;
  margin-right: 50em;
  display: grid;
  grid-template-columns: 1fr;
  grid-gap: 1em;
  padding: 1em;
  text-align: center;
  display: flex;
  border-radius: 1em;
  background: linear-gradient(45deg, var(--color1), var(--color1));
}
.readmore {
  transition: 200ms;
}
.readmore:hover {
  font-size: 1.1em;
  transition: 200ms;
}
</style>